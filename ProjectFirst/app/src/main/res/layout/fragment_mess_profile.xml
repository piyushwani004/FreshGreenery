<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".customer.mess_profile.MessProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circle_img_mess"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/mess_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/circle_img_mess"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Piyush Ajay Wani"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/bgimg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/mess_name_profile"
            android:layout_marginTop="5dp"
            android:src="@mipmap/profileuidesign" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bgimg"
            android:layout_marginTop="0dp">




        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>