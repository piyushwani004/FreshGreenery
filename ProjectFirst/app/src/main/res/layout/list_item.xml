<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutMessMenu"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/border">


    <TextView
        android:id="@+id/textViewNameMess"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textSize="16dp"
        tools:text="Name" />

    <TextView
        android:id="@+id/textViewQuantMess"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textViewNameMess"
        android:layout_toRightOf="@id/textViewNameMess"
        android:gravity="center_vertical"
        android:textSize="16dp"
        tools:text="Quantity" />

    <TextView
        android:id="@+id/textViewPriceMess"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/textViewQuantMess"
        android:layout_toRightOf="@id/textViewQuantMess"
        android:gravity="center_vertical"
        android:textSize="16dp"
        tools:text="Price" />

</RelativeLayout>