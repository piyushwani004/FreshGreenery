<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutMessMenu"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/border">


    <TextView
        android:id="@+id/textViewNameMess"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewQuantMess"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/textViewNameMess"
        android:layout_toRightOf="@id/textViewNameMess"
        android:gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textViewPriceMess"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/textViewQuantMess"
        android:layout_toRightOf="@id/textViewQuantMess"
        android:gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:textSize="16dp" />

</RelativeLayout>